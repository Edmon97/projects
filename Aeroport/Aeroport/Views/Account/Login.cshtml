@model Aeroport.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Use a local account to log in.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label for="userName" class="control-label">@Html.LabelFor(m => m.UserName)</label>
        @Html.TextBoxFor(m => m.UserName, new { id = "userName", @class = "form-control",placeholder="Enter user name" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    
    <div class="form-group">
        <label for="password" class="control-label">@Html.LabelFor(m => m.Password)</label>
        @Html.PasswordFor(m => m.Password, new { id = "password", @class = "form-control",placeholder="Enter password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    
    <div class="checkbox">
    <label>
          @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
        </label>
  </div>
    
    <input type="submit" value="Log in" class="btn btn-success form-control"/>
}
</section>
<br />
 <p>
        @Html.ActionLink("Register", "Register") if you don't have an account.
    </p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

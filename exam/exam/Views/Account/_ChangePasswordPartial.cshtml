@model exam.Models.LocalPasswordModel

<div class="container">
    @using (Html.BeginForm("Manage", "Account"))
    {
        @Html.AntiForgeryToken()

        <h2 class="form-signin-heading">Change Password Form</h2>
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword,new { @class = "sr-only"})
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Old password", style = "width: 20%;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword,new { @class = "sr-only"})
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New password", style = "width: 20%;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword,new { @class = "sr-only"})
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password", style = "width: 20%;" })
        </div>
        <button class="btn btn-default" type="submit" style="width: 20%;">Change password</button>
        @Html.ValidationSummary()
    }
 </div>

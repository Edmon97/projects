@model exam.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()

        <h2 class="form-signin-heading">Please sign in</h2>
		
		<div class="form-group">
			@Html.LabelFor(m=>m.UserName,new { @class = "sr-only"})
			@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "User name", style = "width: 20%;" })
			@Html.ValidationMessageFor(m => m.UserName)
		</div>
		
        <div class="form-group">
			@Html.LabelFor(m=>m.Password,new { @class = "sr-only"})
			@Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", style = "width: 20%;" })
			@Html.ValidationMessageFor(m => m.Password)
		</div>
		
		<div class="checkbox">
			<label>
				@Html.CheckBoxFor(m => m.RememberMe) Remember me ?
			</label>
		</div>


        <button class="btn btn-default" type="submit" style="width: 20%;">Sign in</button>
        @Html.ValidationSummary(true)
	}
        <p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

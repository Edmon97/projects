@{
    ViewBag.Title = "ShowSages";
}

<h2>ShowSages</h2>

<button class="btn btn-info" onclick="changeClick()" data-toggle="modal" data-target="#editModal">Create</button>

<table class="table table-hover" id="sagetable">
    <thead>
    <tr>
        <td>Id</td>
        <td>Image</td>
        <td>Name</td>
        <td>Age</td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Sage Editing</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editId" name="Id" value="" class="form-control"/>
                <label>
                    Name:
                    <input type="text" id="editName" name="Name" value="" class="form-control"/>
                </label><br/>
                <label>
                    Image:
                    <input type="text" id="editImage" name="Image" value="" class="form-control"/>
                </label><br/>
                <label>
                    Age:
                    <input type="number" id="editAge" name="Age" value="" class="form-control"/>
                </label><br/>

                <button type="button" id="saveBt" class="btn btn-success" data-dismiss="modal" onclick="saveSage()">Save</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>

@section scripts
{
    <script src="~/Scripts/sagescript.js"></script>
    <script>
        $(document).ready(function() {
                GetAllSages();
        });

        function changeClick() {
            $("#saveBt").attr("onclick", "createSage()");
        }

    </script>
}


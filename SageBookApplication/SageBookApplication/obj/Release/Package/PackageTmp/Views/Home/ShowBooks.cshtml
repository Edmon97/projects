@{
    ViewBag.Title = "ShowBooks";
}

<h2>ShowBooks</h2>

<button class="btn btn-info" onclick="changeClick()" data-toggle="modal" data-target="#editModal">Create</button>

<table class="table table-hover">
    <thead>
    <tr>
        <td><button class="btn btn-info" value="asc" id="sortId" onclick="sort('Id')">Id</button></td>
        <td><button class="btn btn-info" value="asc" id="sortName">Image</button></td>
        <td><button class="btn btn-info" value="asc" id="sortName" onclick="sort('Name')">Name</button></td>
        <td><button class="btn btn-info" value="asc" id="sortCount" onclick="sort('Count')">Count</button></td>
        <td>Edit</td>
        <td>Delete</td>
    </tr>
    </thead>
    <tbody id="booktable">
    </tbody>
</table>

<div class="modal fade" id="editModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">City Editing</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editId" name="Id" value="" class="form-control"/>
                <label>
                    Name:
                    <input type="text" id="editName" name="Name" value="" class="form-control"/>
                </label><br/>
                <label>
                    Image:
                    <input type="text" id="editImage" name="Image" value="" class="form-control"/>
                </label><br/>
                <label>
                    Count:
                    <input type="number" id="editCount" name="Count" value="" class="form-control"/>
                </label><br/>

                <button type="button" id="saveBt" class="btn btn-success" data-dismiss="modal" onclick="saveBook()">Save</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>

</div>

@section scripts
{
    <script src="~/Scripts/bookscripts.js"></script>
    <script>
        $(document)
            .ready(function() {
                GetAllBooks();
            });
    </script>
}
